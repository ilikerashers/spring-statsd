<!-- aspectJ Plugin -->
<plugin>
    <groupId>org.codehaus.mojo</groupId>
    <artifactId>aspectj-maven-plugin</artifactId>
    <version>1.5</version>
    <configuration>
        <complianceLevel>1.7</complianceLevel>
    </configuration>
    <executions>
        <execution>
            <goals>
                <goal>compile</goal>
                <!-- disabling aspects for tests <goal>test-compile</goal> -->
            </goals>
        </execution>
    </executions>
</plugin>